#include <windows.h>
#include <commctrl.h>

#define IDD_SETTINGS_MAIN       100
#define IDC_REGISTER_NEW        101
#define IDC_CAMERA_LIST         103
#define IDC_UNREGISTER_SELECTED 104

//
// Dialog resources
//
LANGUAGE LANG_NEUTRAL, SUBLANG_NEUTRAL
IDD_SETTINGS_MAIN DIALOG 0, 0, 320, 200
STYLE DS_CENTER | DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "SpoutCam Settings"
FONT 8, "Ms Shell Dlg"
{
    LTEXT           "Manage SpoutCam Virtual Cameras:", -1, 10, 10, 150, 10, SS_LEFT, WS_EX_LEFT
    
    CONTROL         "", IDC_CAMERA_LIST, WC_LISTVIEW, LVS_REPORT | LVS_SINGLESEL | WS_BORDER | WS_TABSTOP, 10, 25, 300, 120
    
    PUSHBUTTON      "Register New Camera", IDC_REGISTER_NEW, 10, 155, 100, 20, 0, WS_EX_LEFT
    PUSHBUTTON      "Unregister Selected", IDC_UNREGISTER_SELECTED, 120, 155, 100, 20, 0, WS_EX_LEFT
    
    DEFPUSHBUTTON   "Close", IDOK, 250, 155, 60, 20, 0, WS_EX_LEFT
    
    LTEXT           "Note: Registration requires administrator privileges", -1, 10, 180, 200, 10, SS_LEFT, WS_EX_LEFT
}